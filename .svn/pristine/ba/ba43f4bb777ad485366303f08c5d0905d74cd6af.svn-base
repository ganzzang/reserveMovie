<select id="selectMovieList" parameterType="pagingBean" resultType="movieBean">
	SELECT
            *
        FROM (
            SELECT
                TITLE_KOR AS titlekor
                ,TITLE_ENG AS titleeng
                ,HALL
                ,TO_CHAR(OP_TIME, 'YYYY_MM_DD_HH24') AS opTime
                ,TO_CHAR(OP_TIME, 'YYYY') AS opTimeYear
                ,TO_CHAR(OP_TIME, 'MM') AS opTimeMonth
                ,TO_CHAR(OP_TIME, 'DD') AS opTimeDay
                ,TO_CHAR(OP_TIME, 'HH24') AS opTimeHh
                ,TO_CHAR(OP_TIME, 'MI') AS opTimeMi
                ,TO_CHAR(ED_TIME, 'YYYY_MM_DD_HH24') AS edTime
                ,TO_CHAR(ED_TIME, 'YYYY') AS edTimeYear
                ,TO_CHAR(ED_TIME, 'MM') AS edTimeMonth
                ,TO_CHAR(ED_TIME, 'DD') AS edTimeDay
                ,TO_CHAR(ED_TIME, 'HH24') AS edTimeHh
                ,TO_CHAR(ED_TIME, 'MI') AS edTimeMi
                ,PATH
                ,CODE
                ,ROW_NUMBER() OVER(ORDER BY TITLE_ENG DESC) AS betweenNum
                ,ROW_NUMBER() OVER(ORDER BY TITLE_ENG ASC) AS NUM
                ,(SELECT COUNT(*) FROM HR.MV_SEAT)
            FROM
                HR.MV_MOVIE
            )
</select>

<!-- seat 화면 관련 쿼리 -->
<!-- 현재 예매된 좌석들 list출력 -->
<select id="selectSeat" parameterType="seatBean" resultType="seatBean">	
	SELECT 
		SEAT_NO AS seatNo
		,SEAT_VALUE AS seatValue
		,CODE
	FROM 
		HR.MV_SEAT
	WHERE
		CODE=#{code} AND SEAT_VALUE='Y'
</select>

<select id="selectMovie" parameterType="movieBean" resultType="movieBean">
	SELECT
            *
        FROM (
            SELECT
                TITLE_KOR AS titlekor
                ,TITLE_ENG AS titleeng
                ,HALL
                ,TO_CHAR(OP_TIME, 'YYYY_MM_DD_HH24') AS opTime
                ,TO_CHAR(ED_TIME, 'YYYY_MM_DD_HH24') AS edTime
                ,PATH
                ,CODE
                ,ROW_NUMBER() OVER(ORDER BY TITLE_ENG DESC) AS betweenNum
                ,ROW_NUMBER() OVER(ORDER BY TITLE_ENG ASC) AS NUM
                ,(SELECT COUNT(*) FROM HR.MV_SEAT)
            FROM
                HR.MV_MOVIE
            WHERE
            	HR.MV_MOVIE.CODE = #{code}
            )
</select>


<!-- 좌석 예약여부 확인 -->
<select id="selectSeatValue" parameterType="seatBean" resultType="seatBean">	
	SELECT 
		SEAT_NO AS seatNo
		,SEAT_VALUE AS seatValue
		,CODE
	FROM 
		HR.MV_SEAT
	WHERE
		CODE=#{code,jdbcType=VARCHAR} AND SEAT_NO=#{seatNo,jdbcType=VARCHAR}
</select>

<!-- 좌석 예약시 작동하는 쿼리 -->
<update id="reserveMovie" parameterType="seatBean">
		UPDATE HR.MV_SEAT
		SET 
			SEAT_VALUE = 'Y'
		WHERE
			SEAT_NO = #{revRequestSeat}
</update>

<delete id="deleteMovie" parameterType="movieBean">
	DELETE
	FROM
		HR.MV_MOVIE
	WHERE
		CODE = #{code}
</delete>

<delete id="deleteHall" parameterType="seatBean">
	DELETE
	FROM
		HR.MV_SEAT
	WHERE
		CODE = #{code}
</delete>



</mapper>